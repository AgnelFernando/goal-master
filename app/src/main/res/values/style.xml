    <style name="GoalMaster.ActionBar.ViewGoal" parent="Theme.GoalMaster">
        <item name="android:actionBarStyle">@style/ViewGoal.ActionBar</item>
    </style>

    <style name="ViewGoal.ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
